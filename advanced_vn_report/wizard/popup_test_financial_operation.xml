<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="popup_financial_operation_form_view" model="ir.ui.view">
            <field name="name">popup_financial_operation_form</field>
            <field name="model">popup.financial.operation</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="financial_operation_id" readonly="1"/>
                            <field name="date_from" readonly="0"/>
                            <field name="date_to" readonly="0"/>

                        </group>
                        <footer>
                            <button name="button_compute_sum_financial" type="object" string="Xác nhận" class="oe_highlight"/>
                            <button string="Hủy" type="object" class="oe_highlight" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>